  url2 = {https://www.slim.eos.ubc.ca/Publications/Public/Conferences/PyHPC/2016/lange2016dtg/lange2016dtg_pres.pdf}
}


@CONFERENCE{lopez2016CMSogl,
  author = {Oscar Lopez and Rajiv Kumar and Ozgur Yilmaz and Felix J. Herrmann},
