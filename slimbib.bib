	Pages = {240-258},
	Pdf = {http://www.eos.ubc.ca/~felix/Preprint/SPIE03DEF.pdf},
	Talkurl = {http://slim.eos.ubc.ca/Publications/Public/Presentations/herrmann03msa.pdf},
	Title = {Multifractional splines: application to seismic imaging},
	Volume = {5207},
	Year = {2003}}

