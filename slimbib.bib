@PRESENTATION{fang2013SINBADp3dfwi,
  title = {Parallel {3D} {FWI} with simultaneous shots},
  booktitle = {SINBAD Fall consortium talks},  
  organization = {SINBAD},
  year = {2013},
  abstract = {In this work, we manage to build the workflow for the
